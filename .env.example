# ===========================================
# Kikuyu Project - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# --- X API Credentials (Persona 1: Kamau) ---
KAMAU_CONSUMER_KEY=your_consumer_key
KAMAU_CONSUMER_SECRET=your_consumer_secret
KAMAU_ACCESS_TOKEN=your_access_token
KAMAU_ACCESS_TOKEN_SECRET=your_access_token_secret
KAMAU_BEARER_TOKEN=your_bearer_token

# --- X API Credentials (Persona 2: Wanjiku) ---
WANJIKU_CONSUMER_KEY=your_consumer_key
WANJIKU_CONSUMER_SECRET=your_consumer_secret
WANJIKU_ACCESS_TOKEN=your_access_token
WANJIKU_ACCESS_TOKEN_SECRET=your_access_token_secret
WANJIKU_BEARER_TOKEN=your_bearer_token

# --- LLM API Keys ---
GROK_API_KEY=your_grok_api_key
# Grok 4 model options: grok-4-fast (default), grok-4, grok-4.1, grok-4.1-fast, grok-4-heavy
GROK_MODEL=grok-4-fast
CLAUDE_API_KEY=your_claude_api_key

# --- Pinecone ---
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=kikuyu-rag

# --- Scheduler Settings ---
LOOP_INTERVAL_HOURS=6
DRY_RUN=false
