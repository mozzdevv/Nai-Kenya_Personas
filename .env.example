# ================================================
# Nairobi Swahili Bot - Environment Configuration
# ================================================
# Copy this file to .env and fill in your values.
# On Railway: set these as environment variables per service.

# --- LLM API Keys ---
GROK_API_KEY=your_grok_api_key
GROK_MODEL=grok-4-fast
CLAUDE_API_KEY=your_claude_api_key

# --- Pinecone (RAG) ---
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=nairobi-swahili-rag

# --- Scheduler Settings ---
LOOP_INTERVAL_HOURS=6
DRY_RUN=false

